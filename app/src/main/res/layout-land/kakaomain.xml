<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo_kakao"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_logo_kakao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="카카오톡"
        android:textSize="12pt"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/logo_kakao"
        app:layout_constraintTop_toTopOf="@id/logo_kakao" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="아이디"
        android:textSize="8pt"
        app:layout_constraintTop_toBottomOf="@id/logo_kakao"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="비밀번호"
        android:textSize="8pt"
        app:layout_constraintTop_toBottomOf="@id/edit_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edit_id"
        android:hint="아이디를 입력하세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_id"
        app:layout_constraintStart_toStartOf="@id/text_id"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/edit_pw"
        android:hint="비밀번호를 입력하세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_pw"
        app:layout_constraintStart_toStartOf="@id/text_pw"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@id/edit_pw"
        app:layout_constraintStart_toStartOf="@id/edit_pw"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/button_signup"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="회원가입"
        app:layout_constraintTop_toBottomOf="@id/edit_pw"
        app:layout_constraintStart_toEndOf="@id/button_login"
        android:layout_marginStart="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>